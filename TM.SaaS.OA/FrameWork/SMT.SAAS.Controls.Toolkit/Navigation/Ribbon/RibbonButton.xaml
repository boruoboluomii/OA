<UserControl x:Class="SMT.SAAS.Controls.Toolkit.Navigation.Ribbon.RibbonButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot" 
          MouseLeftButtonDown="LayoutRoot_MouseLeftButtonDown" MouseEnter="LayoutRoot_MouseEnter" MouseLeave="LayoutRoot_MouseLeave">
        <Border x:Name="ribbonbtnSelectBackground" Visibility="Collapsed"
			CornerRadius="2" BorderThickness="0.5" BorderBrush="{StaticResource datagridColorGold1}" Background="{StaticResource datagridColorGold2}">
        </Border>
        <Ellipse  x:Name="Sign" Fill="{StaticResource datagridColorGold1}" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBlock x:Name="ribbonName" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0"
                 Style="{StaticResource ToolBarTB3}"/>
        
    </Grid>
</UserControl>
